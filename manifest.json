{
  "manifest_version": 3,
  "name": "SF CRM Extractor",
  "version": "0.1.0",
  "description": "Extract data from Salesforce CRM pages.",
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "SF CRM Extractor"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.lightning.force.com/*",
        "https://*.salesforce.com/*"
      ],
      "js": ["src/content/content-main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.lightning.force.com/*",
    "https://*.salesforce.com/*"
  ]
}
